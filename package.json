{
  "name": "mocy",
  "version": "0.2.6",
  "description": "Modern mock REST API server inspired by json-server, powered by SQLite.",
  "homepage": "https://github.com/nektobit/mocy#readme",
  "bugs": {
    "url": "https://github.com/nektobit/mocy/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nektobit/mocy.git"
  },
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "mocy": "dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json && node scripts/copy-playground-assets.mjs",
    "clean": "rimraf dist .coverage",
    "dev": "tsx src/cli.ts",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "mcp:dev": "npm --workspace packages/mocy-mcp run dev",
    "mcp:lint": "npm --workspace packages/mocy-mcp run lint",
    "mcp:typecheck": "npm --workspace packages/mocy-mcp run typecheck",
    "mcp:test": "npm --workspace packages/mocy-mcp run test",
    "mcp:build": "npm --workspace packages/mocy-mcp run build",
    "playground:dev": "npm --workspace packages/mocy-playground run dev",
    "playground:lint": "npm --workspace packages/mocy-playground run lint",
    "playground:typecheck": "npm --workspace packages/mocy-playground run typecheck",
    "playground:test": "npm --workspace packages/mocy-playground run test",
    "playground:build": "npm --workspace packages/mocy-playground run build",
    "check:lockstep": "node scripts/check-lockstep.mjs",
    "release:bump": "node scripts/bump-lockstep-version.mjs",
    "release:notes": "node scripts/generate-release-notes.mjs",
    "release:notes:write": "node scripts/generate-release-notes.mjs --write",
    "verify:core": "npm run lint && npm run typecheck && npm test && npm run build",
    "verify:mcp": "npm run mcp:lint && npm run mcp:typecheck && npm run mcp:test && npm run mcp:build",
    "verify:playground": "npm run playground:lint && npm run playground:typecheck && npm run playground:test && npm run playground:build",
    "verify:workspace": "npm run check:lockstep && npm run verify:core && npm run verify:mcp && npm run verify:playground",
    "release:verify": "npm run verify:workspace",
    "prepublishOnly": "npm run release:verify"
  },
  "keywords": [
    "json-server",
    "mock-api",
    "sqlite",
    "rest"
  ],
  "author": "nektobit",
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "chokidar": "^4.0.3",
    "commander": "^14.0.1",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "json-server": "^1.0.0-beta.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4"
  }
}
